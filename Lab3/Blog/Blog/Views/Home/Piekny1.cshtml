
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Piekny1</title>

    <link href="~/Content/bootstrap-grid.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Piekny/styl1.css" rel="stylesheet" />
    <script src="~/Scripts/Piekny/piekny1.js"></script>
</head>
<body>
    <div class="month">
        <ul>
            <li class="prev">&#10094;</li>
            <li class="next">&#10095;</li>
            <li>December<br><span style="font-size:18px">2018</span></li>
        </ul>
    </div>

    <ul class="weekdays">
        <li>Mo</li>
        <li>Tu</li>
        <li>We</li>
        <li>Th</li>
        <li>Fr</li>
        <li>Sa</li>
        <li>Su</li>
    </ul>

    <ul class="days">
        @{ for (int i = 0; i < 30; i++)
            {
                if (i == 12)
                {
                    <li><span class="active">@(i+1)</span></li>
                }
                <li>@(i+1)</li>
            } }
    </ul>
</body>
</html>
