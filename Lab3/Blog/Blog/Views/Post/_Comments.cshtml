@model List<Blog.Models.Comment>



@foreach (var item in Model)
{
    <span id="@item.PostID">
        <p name="@item.CommentId" style="color:red;" class="text-center h2"><strong>@item.Body</strong></p>
        <input type="text" id="getText" />
        <input type="button" onclick="Edytuj(this)" class="btn btn-warning" value="Edytuj komentarz" />
        <input type="button" onclick="Usun(this)" style="margin-left: 100px; margin-right: auto;" class="btn btn-danger mt-2" value="Usuń komentarz" />
    </span>
}
